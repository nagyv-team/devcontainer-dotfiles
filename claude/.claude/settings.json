{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${HOME}/.claude/scripts/save_user_prompt.py || (echo \"Add 'save_user_prompt.py' to 'project/bin' directory from https://github.com/nagyv/claude-commands\" >&2 && exit 1)"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r .message | say"
          }
        ]
      }
    ]
  }
}
